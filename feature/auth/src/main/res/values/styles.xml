<resources>

    <style name="AuthActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textInputStyle">@style/AuthEditText</item>
        <item name="materialButtonStyle">@style/AuthButton</item>
    </style>

    <style name="AuthEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/auth_edit_text_stroke_color</item>
        <item name="android:textColorHint">#656D8A</item>
        <item name="hintTextColor">#656D8A</item>
        <item name="endIconTint">#656D8A</item>
    </style>

    <style name="AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:bottom">0dp</item>
        <item name="backgroundTint">@color/auth_button_background_color</item>
        <item name="android:textAppearance">@style/AuthButtonTextAppearance</item>
    </style>

    <style name="AuthButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/auth_button_text_color</item>
    </style>
</resources>
