<resources>

    <style name="AuthFragmentTheme" parent="AppTheme">
        <item name="textInputStyle">@style/AuthTextInput</item>
        <item name="materialButtonStyle">@style/AuthButton</item>
    </style>

    <style name="AuthTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/auth_text_input_stroke_color</item>
        <item name="android:textColorHint">@color/auth_text_input_hint</item>
        <item name="hintTextColor">@color/auth_text_input_hint</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="endIconTint">@color/colorIcons</item>
    </style>

    <!--    попытался вынести цвет текста в EditText в стиль, не получилось, пришлось захардкодить textColor-->
